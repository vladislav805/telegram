{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "esnext",
        "sourceMap": false,
        "strict": true,
        "lib": ["es6", "es7", "es2020"],
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "esModuleInterop": true,
        "baseUrl": "src",
        "outDir": "dist",
        "declaration": true,
        "declarationDir": "dist",
        "paths": {
            "@utils/*": ["utils/*"],
            "@typings": ["typings"],
            "@typings/*": ["typings/*"],
            "@plugins/*": ["plugins/*"],
            "@client": ["client"],
            "@bot": ["bot"],
            "@bot/*": ["bot/*"]
        },
        "types": ["node"]
    },
    "include": [
        "src/**/*"
    ]
}
